<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rectangle_8_fff"
    android:layout_width="match_parent"
    app:cardCornerRadius="14dp"
    app:cardElevation="10dp"
    android:outlineSpotShadowColor="@color/white"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:outlineSpotShadowColor="@color/white"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/ivProfilMua"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profilpic" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            style="@style/TextView.PoppinsRegular16sp020202"
            android:text="NN Salon"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvAlamat"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            style="@style/TextView.PoppinsLight11sp8D92A3"
            android:text="Jln. Abu bakar Lambogo Lr.5 No.12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>