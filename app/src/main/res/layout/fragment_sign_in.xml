<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:paddingTop="26dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:layout_marginTop="24dp"
    android:orientation="vertical"
    tools:context=".ui.auth.signin.SignInFragment">

    <TextView
        android:id="@+id/textView36"
        style="@style/TextView.PoppinsRegular16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/etEmail"
        style="@style/EditText.PoppinsRegular14sp8D92A3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#020202"
        android:background="@drawable/shape_rectangle_outline_8_020202"
        android:hint="Masukkan emailmu"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView36"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView35"
        style="@style/TextView.PoppinsRegular16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView37"
        style="@style/TextView.PoppinsLight14spfff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lupa Password ?"
        android:textColor="#8D92A3"
        app:layout_constraintBottom_toTopOf="@+id/tvLupaPassword"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/tvLupaPassword"
        style="@style/TextView.PoppinsLight14spfff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="Hubungi Admin"
        android:textColor="#FE9BB3"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="24dp" />


    <EditText
        android:id="@+id/etPassword"
        style="@style/EditText.PoppinsRegular14sp8D92A3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#020202"
        android:background="@drawable/shape_rectangle_outline_8_020202"
        android:hint="Masukkan passwordmu"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView35"
        tools:layout_editor_absoluteX="6dp" />

    <Button
        android:id="@+id/btnSignin"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Masuk"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        tools:layout_editor_absoluteX="-22dp" />

    <Button
        android:id="@+id/btnSignup"
        style="@style/Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Buat Akun Baru"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btnSignin"
        tools:layout_editor_absoluteX="-21dp" />


</androidx.constraintlayout.widget.ConstraintLayout>