<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rectangle_8_ffe5ec"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:layout_height="200dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:outlineSpotShadowColor="@color/white"
        app:cardCornerRadius="14dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/ivProfilMua"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_dela" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        style="@style/TextView.PoppinsSemiBold10sp8020202"
        android:text="Adella Dewi Cahayani"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        style="@style/TextView.PoppinsReguler9sp8D92A3"
        android:text="Jalan Perintis Kemerdekaan 7"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RatingBar
        android:id="@+id/rbMua"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:theme="@style/RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>